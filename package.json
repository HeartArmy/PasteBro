{
  "name": "pastebro",
  "version": "1.0.0",
  "description": "Mac OS Native Paste Manager",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "postinstall": "electron-rebuild",
    "build": "electron-builder --mac",
    "build:intel": "electron-builder --mac --x64",
    "build:arm": "electron-builder --mac --arm64"
  },
  "keywords": [
    "clipboard",
    "paste",
    "manager",
    "macos"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "electron": "^33.2.0",
    "electron-builder": "^25.1.8",
    "electron-rebuild": "^3.2.9"
  },
  "dependencies": {
    "better-sqlite3": "^11.5.0"
  },
  "build": {
    "appId": "com.pastebro.app",
    "productName": "PasteBro",
    "asar": true,
    "compression": "maximum",
    "mac": {
      "category": "public.app-category.productivity",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "assets/icon.icns",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist"
    },
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "files": [
      "main.js",
      "preload.js",
      "clipboardMonitor.js",
      "clipboardItem.js",
      "database.js",
      "historyManager.js",
      "preferencesManager.js",
      "permissionManager.js",
      "imageStorageManager.js",
      "renderer/**/*",
      "assets/**/*",
      "node_modules/**/*",
      "package.json"
    ]
  }
}
